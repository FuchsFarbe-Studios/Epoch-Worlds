@if (_userWorlds.Any())
{
	<MudMenu Dense="false" Variant="Variant.Filled" AnchorOrigin="Origin.BottomCenter">
		<ActivatorContent>
			<MudChip Icon="@($"{StaticUtils.AwesomeIcons.FontDict[AwesomeIconType.EarthAsia]}")" IconColor="Color.Dark" Variant="Variant.Filled" Text="@($"{_selectedWorld.WorldName}")" Color="Color.Success" />
		</ActivatorContent>
		<ChildContent>
			@foreach (var w in _userWorlds)
			{
				<MudMenuItem OnClick="@(async () => await WorldChanged(w))">@w.WorldName</MudMenuItem>
			}
		</ChildContent>
	</MudMenu>
}
else
{
	<MudProgressCircular Size="Size.Small" Color="Color.Warning" Indeterminate="true" Class="my-1 mx-2" />
}