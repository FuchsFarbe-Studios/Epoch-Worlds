@if (Article != null && Article.ShowTableOfContents)
{
	<MudPaper Width="100%" Elevation="0" Outlined="true" Class="mud-border-primary">
		<MudText Typo="Typo.h6" Class="mb-4" Align="Align.Center">Table of Contents</MudText>
		<MudList>
			@foreach (var s in Sections)
			{
				@if (!string.IsNullOrEmpty(s.Content))
				{
					<MudListItem @key=@s.SectionID Dense="true">
						<MudLink Color="Color.Primary" Href="@($"/W/{Article.WorldId}/A/{Article.ArticleId}#{s.SectionID.ToString()}")" Class="text-decoration-none">@(Sections?.IndexOf(s) + 1) - @s.Title</MudLink>
					</MudListItem>
				}
			}
		</MudList>
	</MudPaper>
}

@* ReSharper disable once CSharpWarnings::CS1591 *@