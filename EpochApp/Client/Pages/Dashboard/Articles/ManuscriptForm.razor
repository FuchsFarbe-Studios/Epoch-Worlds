@inherits RequestComponent<ManuscriptDTO>

<EditForm Model="@Model" OnSubmit="@OnManuscriptSubmit">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<MudTextField @bind-Value="@Model.Title" For="@(() => Model.Title)" Label="Title" MaxLength="100" />
	<MudTextField @bind-Value="@Model.Summary" For="@(() => Model.Summary)" Label="Summary" Lines="5" />
	<MudButton Color="Color.Primary" ButtonType="ButtonType.Submit" FullWidth="true">Submit</MudButton>
</EditForm>