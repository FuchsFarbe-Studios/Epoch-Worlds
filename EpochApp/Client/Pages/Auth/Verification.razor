@page "/Auth/Verification"
@page "/Auth/Verification/{Token?}"
<PageTitle>Account Verification - @StaticUtils.Constants.AppName</PageTitle>
<MudText Typo="Typo.h3">Verification</MudText>

@if (!_isSuccess)
{
	<MudTextField @bind-Value="@_verificationDTO.Token" For="@(() => _verificationDTO.Token)" Label="Verification Token" ReadOnly="true" Variant="Variant.Filled" />
}
else
{
	<MudText Color="Color.Success" Align="Align.Center" Typo="Typo.h4">Your account has been verified! You will be redirected shortly to your dashboard.</MudText>
}