@using Variant=MudBlazor.Variant
@using MudBlazor

@* <MudText Typo="Typo.h6" Color="Color.Inherit" Class="ml-3 width-25p">Epoch World Exchange</MudText> *@
<MudLink Href="/">
	<MudImage Src="images/logos/SVG/world-svg.svg" Height="48" Alt="The logo for the website's application bar." Elevation="0" Class="mx-2" />
</MudLink>
<MudButton StartIcon="@Icons.Material.Filled.Home" Color="Color.Inherit" Size="Size.Small" Variant="Variant.Text" Href="@NavRef.Site.Index">Home</MudButton>
<MudButton StartIcon="@Icons.Material.Filled.List" Color="Color.Inherit" Size="Size.Small" Variant="Variant.Text" Href="@NavRef.Site.Features">Features</MudButton>
<MudButton StartIcon="@Icons.Material.Filled.ContactPage" Color="Color.Inherit" Size="Size.Small" Variant="Variant.Text" Href="@NavRef.Site.About">About</MudButton>
<AuthorizeView Roles="ADMIN,INTERNAL">
	<Authorized>
		<MudButton Color="Color.Warning" Size="Size.Small" Variant="Variant.Text" Href="@NavRef.AdminNav.Index">Internal</MudButton>
	</Authorized>
</AuthorizeView>
<MudSpacer />
<AuthorizeView>
	<Authorized>
		<MudMenu Icon="@Icons.Material.Filled.MoreVert" Color="Color.Inherit" DisableElevation="true">
			<MudMenuItem Icon="@Icons.Material.Filled.PermIdentity" Href="@NavRef.UserNav.Profile">@($"{Auth.CurrentUser.UserName.ToUpperInvariant()}'s Profile")</MudMenuItem>
			<MudMenuItem Icon="@Icons.Material.Filled.AccountCircle" Href="@NavRef.UserNav.Account">Account</MudMenuItem>
			<MudMenuItem Icon="@Icons.Material.Filled.Settings" Href="@NavRef.UserNav.Settings">Settings</MudMenuItem>
			<MudMenuItem Icon="@Icons.Material.Rounded.Logout" IconColor="Color.Error" Href="@NavRef.Auth.Logout">Logout</MudMenuItem>
		</MudMenu>
	</Authorized>
	<NotAuthorized>
		<MudButton StartIcon="@Icons.Material.Rounded.AppRegistration" Variant="Variant.Text" DisableElevation="true" Href="@NavRef.Auth.Registration" Color="Color.Inherit" Size="Size.Small">
			Register
		</MudButton>
		<MudButton StartIcon="@Icons.Material.Rounded.Login" Variant="Variant.Text" DisableElevation="true" Href="@NavRef.Auth.Login" Color="Color.Inherit" Size="Size.Small">
			Log-In
		</MudButton>
	</NotAuthorized>
</AuthorizeView>