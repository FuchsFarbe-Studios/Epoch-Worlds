@using AlignItems=MudBlazor.AlignItems
@using Justify=MudBlazor.Justify
@using Variant=MudBlazor.Variant
@using MudBlazor
<div class="flex-center">
	<MudContainer>
		<MudStack Justify="Justify.Center">
			<MudStack Row="true" AlignItems="AlignItems.Baseline" Justify="Justify.SpaceBetween">
				<MudLink Href="/">
					<MudImage Height="72" Elevation="0" Src="images/logos/SVG/words-svg.svg" Alt="Site footer logo." ObjectFit="ObjectFit.Contain" />
				</MudLink>
				@ChildContent
				<MudToolBar Dense="true">
					<MudButton Color="Color.Surface" Variant="Variant.Text" Href="@NavRef.Site.About">About</MudButton>
					<MudButton Color="Color.Surface" Variant="Variant.Text" Href="@NavRef.Site.Policy">Policy</MudButton>
					<MudButton Color="Color.Surface" Variant="Variant.Text" Href="@NavRef.Site.Contact">Contact</MudButton>
					<MudButton Color="Color.Surface" Variant="Variant.Text" Href="@NavRef.Site.Faq">FAQ</MudButton>
					<MudButton Color="Color.Surface" Variant="Variant.Text" Href="@NavRef.Site.Support">Support</MudButton>
				</MudToolBar>
			</MudStack>
		</MudStack>
	</MudContainer>
</div>