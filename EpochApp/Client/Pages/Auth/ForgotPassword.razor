@page "/Auth/Forgot-Password"
@inherits RequestComponent<ForgotPasswordDTO>
<PageTitle>Account Recovery - @StaticUtils.Constants.AppName</PageTitle>
<MudText Typo="Typo.h3" Color="Color.Error" Align="Align.Center">Account Recovery</MudText>

<EditForm Model="@Model" OnValidSubmit="@SubmitResetPasswordAsync">
	<DataAnnotationsValidator />
	<MudStack>
		<MudTextField @bind-Value="@Model.User" For="@(() => Model.User)" Required="true" Label="Username or email address" Variant="Variant.Outlined" Margin="Margin.Dense" AutoFocus="true" FullWidth="true" MaxLength="255" />
		<MudButton DisableElevation="true" Color="Color.Secondary" Variant="Variant.Filled" ButtonType="ButtonType.Submit" FullWidth="true">Submit</MudButton>
	</MudStack>
</EditForm>