@page "/"
@using Typo=MudBlazor.Typo
@using MudBlazor
@namespace EpochApp.Client.Pages

<PageTitle>@StaticUtils.Constants.AppName</PageTitle>
<section class="my-2">
	<MudText Typo="Typo.h1" Color="Color.Dark" Align="Align.Left" GutterBottom="true">Welcome to the Epoch World Exchange!</MudText>
	<MudText Typo="Typo.h2" Color="Color.Dark" Align="Align.Left" GutterBottom="true">A World first in Collaborative and Generative Content Generation</MudText>
</section>
<section class="my-2">
	<MudText Typo="Typo.h3" Align="Align.Center">Latest Site News</MudText>
	<MudContainer>
		<BlogView BlogType="BlogType.NEWS" />
	</MudContainer>
</section>