@namespace EpochApp.Client.Shared
@using MudBlazor
@inherits LayoutComponentBase
@layout MainLayout

<AuthorizeView>
	<Authorized>
		<SubNav />
		<MudContainer>
			<MudPaper Outlined="true" Width="100%" MinHeight="300px" Class="mud-border-dark pa-4 mt-2">
				@Body
			</MudPaper>
		</MudContainer>
