@using Justify=MudBlazor.Justify
@using MaxWidth=MudBlazor.MaxWidth
@using Typo=MudBlazor.Typo
@using MudBlazor
@namespace EpochApp.Client.Shared
@attribute [Authorize(Roles = "ADMIN,INTERNAL")]
@inherits LayoutComponentBase
@layout MainLayout

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
	<MudPaper Width="100%" Class="pa-2 mud-border-warning" Elevation="0" Outlined="true" MinHeight="100vh" Square="true">
		<MudStack Spacing="1">
			<MudPaper Width="100%" Class="pa-4 mud-border-warning" Outlined="true">
				<MudStack Row="true" Spacing="2" Justify="Justify.Center">
					<MudText Typo="Typo.h5" Align="Align.Left" Color="Color.Warning">Internal</MudText>
					<MudSpacer />
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.Blogs">Manage Blogs</MudLink>
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.BlogPosts">Blog Posts</MudLink>
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.Contacts">Contacts</MudLink>
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.Logs">View Logs</MudLink>
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.Configuration">Configuration</MudLink>
					<MudLink Color="Color.Warning" Href="@NavRef.AdminNav.Users">Users</MudLink>
				</MudStack>
			</MudPaper>
			<AuthorizeView Roles="ADMIN">
				<MudPaper Width="100%" Class="pa-4 mud-border-error mb-2" Outlined="true">
					<MudStack Row="true" Spacing="2" Justify="Justify.Center">
						<MudText Typo="Typo.h6" Align="Align.Left" Color="Color.Error">Administrator Configuration</MudText>
						<MudSpacer />
						<MudLink Color="Color.Error" Href="/Configure/Templates/Article">Article Templates</MudLink>
						<MudLink Color="Color.Error" Href="/Internal/Configuration/Dictionary">Word Dictionary</MudLink>
						<MudLink Color="Color.Error" Href="/Internal/Configuration/Phonemes">Phonemes</MudLink>
						<MudLink Color="Color.Error" Href="/Internal/Configuration/IPAKeyboard">Keyboard</MudLink>
					</MudStack>
				</MudPaper>
			</AuthorizeView>
		</MudStack>

		@Body
	</MudPaper>
</MudContainer>