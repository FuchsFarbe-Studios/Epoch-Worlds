@using EpochComponents.Enums
@using EpochComponents.Utils

@switch (Typo)
{
    case EpochTypoType.H1:
        <h1 class="@($"")" >@ChildContent</h1>
        break;
    case EpochTypoType.H2:
        <h2>@ChildContent</h2>
        break;
    case EpochTypoType.H3:
        <h3>@ChildContent</h3>
        break;
    case EpochTypoType.H4:
        <h4>@ChildContent</h4>
        break;
    case EpochTypoType.H5:
        <h5>@ChildContent</h5>
        break;
    case EpochTypoType.H6:
        <h6>@ChildContent</h6>
        break;
    case EpochTypoType.Body1:
        <p>@ChildContent</p>
        break;
    case EpochTypoType.Body2:
        <p>@ChildContent</p>
        break;
    case EpochTypoType.Span:
        <span class=@($"badge edge-round-sm {Color.ToDescriptionString()}")>@ChildContent</span>
        break;
    case EpochTypoType.Mono:
        <code>@ChildContent</code>
        break;
    default:
        <p>@ChildContent</p>
        break;
}

