@page "/"

<PageTitle>Index</PageTitle>

<h3>Browser Storage Test</h3>
<form>
    <label>
        Key
        <input type="text" @bind-value="@Key" />
    </label>
    <label>
        Value
        <input type="text" @bind-value="@Value" />
    </label>
    <button class="button" @onclick="@(async () => await SetValueAsync())" type="button">Set Value</button>
</form>
<div>Stored Value: @StoredValue</div>

<div>
    <button type="button" class="button" @onclick="@(async () => await GetValueAsync())">Get Value</button>
    <button type="button" class="button" @onclick="@(async () => await RemoveAsync())">Remove Value</button>
    <button type="button" class="button" @onclick="@(async () => await ClearAllAsync())">Clear Value</button>
</div>
<br />
