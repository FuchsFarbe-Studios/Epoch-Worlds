@page "/User/Worlds"
<PageTitle>@StaticUtils.Constants.AppName - @Auth.CurrentUser.UserName's Worlds</PageTitle>
@namespace EpochApp.Client.Pages.User
@inherits RequestComponent<EpochApp.Shared.Worlds.World>
<FlatTypo Typo="Typo.Heading2" Text="@($"{Auth.CurrentUser.UserName}'s Worlds")" />

<!-- Filled out World Cards -->

@if (_userWorlds.Any() && !_loading)
{
	@foreach (var world in _userWorlds)
	{
		<FlatCard HeadingText="@world.WorldName">
			<CardContent>
				@world.Description
			</CardContent>
			<CardButtons>
				<FlatButton Link="@($"/User/W/Edit/{world.WorldID}")">Edit World</FlatButton>
			</CardButtons>
		</FlatCard>
	}
}
else if (!_loading)
{
	<FlatTypo Typo="Typo.Heading3" Text="No Worlds Found" />
	<FlatButton Link="/User/W/Create">Create World!</FlatButton>
}
else
{
	<FlatProgress Color="FlatColor.Orange" Type="ProgressType.Default" ElementSize="ElementSize.Large" />
}