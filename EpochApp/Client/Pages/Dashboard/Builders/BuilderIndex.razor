@page "/Builders"
@using MaxWidth=MudBlazor.MaxWidth
@using Typo=MudBlazor.Typo
@using Variant=MudBlazor.Variant
@using MudBlazor
@namespace EpochApp.Client.Pages.Dashboard.Builders

<PageTitle>@StaticUtils.Constants.AppName - Builders</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium">

	<MudText Typo="Typo.h3">Builders</MudText>
	<MudText Typo="Typo.body1">Here are the main builders for your world. </MudText>

	<MudExpansionPanels Dense="true" Elevation="0" MultiExpansion="true" DisableBorders="false">

		<MudExpansionPanel>
			<TitleContent>
				<MudText Typo="Typo.h6">Constructed Language Generator</MudText>
			</TitleContent>
			<ChildContent>
				<MudStack>
					<MudText Typo="Typo.body1">Create a new constructed language for your world. Several generation options are available, such as Phonology, Grammar, and Vocabulary.</MudText>
					<MudButtonGroup Variant="Variant.Outlined" Size="Size.Large" Color="Color.Primary" DisableElevation="true">
						<MudButton Href="@NavRef.BuilderNav.CongLang.Create">Create Language</MudButton>
						<MudButton Href="@NavRef.BuilderNav.CongLang.Edit">Edit Language</MudButton>
					</MudButtonGroup>
				</MudStack>
			</ChildContent>
		</MudExpansionPanel>

		<MudExpansionPanel Disabled="true">
			<TitleContent>
				<MudText Typo="Typo.h6">Character Creator (Coming Soon!)</MudText>
			</TitleContent>
			<ChildContent>
				<MudText Typo="Typo.body1">Create a new character from scratch, or allow our creative generators to create one for you that utilizes your world's data to generate a character.</MudText>
				<MudButtonGroup Variant="Variant.Outlined" Size="Size.Large" Color="Color.Secondary" DisableElevation="true">
					<MudButton Href="@NavRef.BuilderNav.Character.Create">Create Character</MudButton>
					<MudButton Href="@NavRef.BuilderNav.Character.Edit">Edit Character</MudButton>
				</MudButtonGroup>
			</ChildContent>
		</MudExpansionPanel>

		<MudExpansionPanel Disabled="true">
			<TitleContent>
				<MudText Typo="Typo.h6">State Manager (Coming Soon!)</MudText>
			</TitleContent>
			<ChildContent>
				<MudText Typo="Typo.body1">Create, manage, or generate world states, countries, or territories.</MudText>
			</ChildContent>
		</MudExpansionPanel>

	</MudExpansionPanels>

</MudContainer>

