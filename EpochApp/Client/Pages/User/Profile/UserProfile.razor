@using EpochApp.Client.Shared.Forms
@namespace EpochApp.Client.Pages.User

<FlatContainer MaxWidth="MaxWidth.ExtraLarge">
	<FlatButton OnClick="@(() => _isEdit = !_isEdit)">Edit</FlatButton>
	@if (Profile != null && !_isEdit)
	{
		<FlatTypo Text="@UserData.UserName.ToUpper()" Typo="Typo.Heading5" />
		<FlatBreak />
		<FlatTypo Typo="Typo.Heading6">@Profile.FirstName @Profile.LastName</FlatTypo>
		<FlatTypo>@Profile.Bio</FlatTypo>
		<FlatTypo>@Profile.Signature</FlatTypo>
		<FlatTypo>
			<FlatElement HtmlTag="a">@Profile.WebAddress</FlatElement>
		</FlatTypo>
	}

	@if (_isEdit)
	{
		<ProfileForm Profile="@Profile" />
	}
</FlatContainer>