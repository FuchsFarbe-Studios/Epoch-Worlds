@using MudBlazor
@inherits RequestComponent<BuilderContent>

@if (Type != null && _userContent.Any())
{
	<MudSelect T="BuilderContent" Value="@_selectedContent" ValueChanged="@(async c => await ContentChanged(c))" Label="Content Selection">
		@foreach (var content in _userContent)
		{
			<MudSelectItem Value="@content">@content.ContentType @content.ContentID</MudSelectItem>
		}
	</MudSelect>
}