@page "/Internal/Contacts"

<MudTable Virtualize="true" Height="500px" T="InternalContactDTO" Items="@_contacts" Dense="true" Loading="@(!_contacts.Any())" Hover="true" Outlined="true" Striped="true" Bordered="true">
	<HeaderContent>
		<MudTh>Id</MudTh>
		<MudTh>Username</MudTh>
		<MudTh>Email</MudTh>
		<MudTh>Type</MudTh>
		<MudTh>Content</MudTh>
		<MudTh>CreatedOn</MudTh>
	</HeaderContent>
	<RowTemplate>
		<MudTd DataLabel="Id">@context.ContactPointId</MudTd>
		<MudTd DataLabel="Username">@context.UserName</MudTd>
		<MudTd DataLabel="Email">@context.Email</MudTd>
		<MudTd DataLabel="Type">@context.ContactType</MudTd>
		<MudTd DataLabel="Content">@context.Message</MudTd>
		<MudTd DataLabel="CreatedOn">@context.CreatedOn</MudTd>
	</RowTemplate>
</MudTable>