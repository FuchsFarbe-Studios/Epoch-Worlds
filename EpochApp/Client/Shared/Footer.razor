@using AlignItems=MudBlazor.AlignItems
@using Justify=MudBlazor.Justify
@using Typo=MudBlazor.Typo
@using MudBlazor

<footer class="site-footer mud-theme-dark d-flex align-content-center">
	<MudStack Class="px-4 flex-grow-1" Row="true" AlignItems="AlignItems.Center" Justify="Justify.SpaceBetween">
		<MudLink Href="/">
			<MudImage Height="72" Elevation="0" Src="images/logos/SVG/words-svg.svg" Alt="Site footer logo." ObjectFit="ObjectFit.Contain" />
		</MudLink>
		@ChildContent
		<MudToolBar Dense="true">
			<MudStack Row="true" Spacing="3">
				<MudLink Typo="Typo.subtitle2" Underline="Underline.None" Color="Color.Inherit" Href="@NavRef.Site.About">About</MudLink>
				<MudLink Typo="Typo.subtitle2" Underline="Underline.None" Color="Color.Inherit" Href="@NavRef.Site.Policy">Policy</MudLink>
				<MudLink Typo="Typo.subtitle2" Underline="Underline.None" Color="Color.Inherit" Href="@Settings?.ContactSettings?.ContactLink">Contact</MudLink>
				<MudLink Typo="Typo.subtitle2" Underline="Underline.None" Color="Color.Inherit" Href="@NavRef.Site.Faq">FAQ</MudLink>
				<MudLink Typo="Typo.subtitle2" Underline="Underline.None" Color="Color.Inherit" Href="@NavRef.Site.Support">Support</MudLink>
			</MudStack>
		</MudToolBar>
	</MudStack>
</footer>