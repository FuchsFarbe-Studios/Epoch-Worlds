@page "/World/Files"

<MudText></MudText>

<DashContent ContentTitle="@($"{ActiveWorld?.WorldName}'s Images")">
	<AsideContent>
		<FileUpload IsWorldFile="true" />
	</AsideContent>
	<ActionContent />
	<MainContent>
		<MudGrid>
			@foreach (var file in _files)
			{
				<MudItem @key="@file.FileId" xs="12" md="6" lg="4" xl="3">
					<FileCard @key="@file.FileId" UserFile="@file" />
				</MudItem>
			}
		</MudGrid>
	</MainContent>
</DashContent>