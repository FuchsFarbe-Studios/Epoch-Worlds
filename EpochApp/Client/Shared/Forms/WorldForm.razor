<EditForm Model="@World" OnSubmit="SaveWorldAsync">
	<FlatTypo Typo="Typo.Heading3">World Form</FlatTypo>
	<FlatBreak />
	<FlatContainer>
		<FlatTextInput @bind-Value="@World.WorldName" Placeholder="World Name" />
		<FlatTextArea HelpText="A brief description of your world." @bind-Value="@World.Description" Placeholder="Description" Lines="5" />
	</FlatContainer>
	<FlatButton Color="FlatColor.Accent" Edge="EdgeType.RoundMd" Variant="Variant.Default" ButtonType="ButtonType.Submit">
		Submit
	</FlatButton>
</EditForm>