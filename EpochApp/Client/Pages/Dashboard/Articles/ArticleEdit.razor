@page "/Article/Edit"
@page "/Article/E"
@page "/Article/Edit/{ArticleId?}"
@page "/Article/E/{ArticleId?}"
@using Typo=MudBlazor.Typo
@using MudBlazor

<PageTitle>@StaticUtils.Constants.AppName - Edit Article</PageTitle>

<MudContainer>
	<MudPaper Width="100%" Square="true" Outlined="true" Height="100%" Class="pa-2">
		<MudText Align="Align.Center" Typo="Typo.h3">Edit Article</MudText>
		@if (_editArticle != null)
		{
			<ArticleForm IsEditMode="true" ArticleEdit="@_editArticle" />
		}
	</MudPaper>
</MudContainer>