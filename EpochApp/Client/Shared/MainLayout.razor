@using MaxWidth=MudBlazor.MaxWidth
@using MudBlazor
@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />
<FlatThemeProvider />

<MudLayout>
	<MudAppBar Elevation="0">
		<MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())" />
		<AppBar />
	</MudAppBar>
	<MudDrawer @bind-Open="_drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="2">
		@*	NavMenu	*@
		<NavMenu IsMudMenu="true" />
		<AuthorizeView>
			<WorldSelector OnWorldChanged="@HandleWorldChanged" />
		</AuthorizeView>
	</MudDrawer>
	<MudMainContent>
		<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Style="min-height: 100vh;">
			<CascadingValue Value="@_activeWorld" Name="ActiveWorld">
				@Body
			</CascadingValue>
		</MudContainer>
		<footer class="site-footer menu-items-wrapper">
			<Footer />
		</footer>
	</MudMainContent>
</MudLayout>

