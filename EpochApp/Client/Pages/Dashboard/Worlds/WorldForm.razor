@using ButtonType=MudBlazor.ButtonType
@using Variant=MudBlazor.Variant
@using MudBlazor

@if (World != null)
{
	<EditForm Model="@World" OnValidSubmit="@HandleWorldSubmit">
		<MudCard Outlined="true">
			<MudCardContent>
				<MudGrid>
					<MudItem xs="12" sm="6">
						<MudTextField Label="Name" @bind-Value="@World.WorldName" For="@(() => World.WorldName)" />
					</MudItem>
					<MudItem xs="12" sm="6">
						<MudTextField Label="Pronunciation" @bind-Value="@World.Pronunciation" For="@(() => World.Pronunciation)" />
					</MudItem>
					<MudItem xs="12">
						<MudTextField Label="Description" @bind-Value="@World.Description" For="@(() => World.Description)" Lines="3" />
					</MudItem>
					<MudItem xs="12" sm="6" md="4">
						<MudNumericField Label="Current Day" T="int" @bind-Value="@World.CurrentWorldDate.CurrentDay" For="@(() => World.CurrentWorldDate.CurrentDay)" />
					</MudItem>
					<MudItem xs="12" sm="6" md="4">
						<MudNumericField Label="Current Month" T="int" @bind-Value="@World.CurrentWorldDate.CurrentMonth" For="@(() => World.CurrentWorldDate.CurrentMonth)" />
					</MudItem>
					<MudItem xs="12" sm="6" md="4">
						<MudNumericField Label="Current Year" T="int" @bind-Value="@World.CurrentWorldDate.CurrentYear" For="@(() => World.CurrentWorldDate.CurrentYear)" />
					</MudItem>
					<MudItem xs="12">
						<MudTextField Label="Current World Age" @bind-Value="@World.CurrentWorldDate.CurrentAge" For="@(() => World.CurrentWorldDate.CurrentAge)" />
					</MudItem>
				</MudGrid>
			</MudCardContent>
			<MudCardActions>
				<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" DisableElevation="true"><MudIcon Icon="@($"{StaticUtils.AwesomeIcons.FontDict[AwesomeIconType.FloppyDisk]}")" Class="mr-1" /> Submit</MudButton>
				<MudIconButton Size="Size.Large" ButtonType="ButtonType.Button" Color="Color.Error" DisableElevation="true" Icon="@Icons.Material.Filled.Cancel" Title="Cancel editing this world." Href="@($"{NavRef.WorldNav.Index}")" />
			</MudCardActions>
		</MudCard>
	</EditForm>
}