@page "/W/{WorldId?}"
@using MaxWidth=MudBlazor.MaxWidth
@using Typo=MudBlazor.Typo
@using MudBlazor

<MudContainer MaxWidth="MaxWidth.Large" Style="min-height: 100vh;">
	<MudPaper Outlined="true" Class="mud-border-secondary" Width="100%" MinHeight="100vh">
		@if (_world == null)
		{
			<MudProgressLinear Indeterminate="true" Color="Color.Primary" Size="Size.Large" />
		}
		else
		{
			<MudStack Spacing="1">
				<MudText Align="Align.Center" Typo="Typo.h1" Color="Color.Primary" GutterBottom="true">@_world?.WorldName</MudText>
				<MudText Align="Align.Center" Typo="Typo.body2" Color="Color.Tertiary">Created On: @_world.DateCreated</MudText>
				<MudDivider Light="false" Class="my-1" DividerType="DividerType.Middle" />
				<MudText Align="Align.Center" Typo="Typo.h3" GutterBottom="true">@_world?.Header</MudText>
				<MudText Align="Align.Center" Typo="Typo.caption">@_world?.Excerpt</MudText>
				<MudText Align="Align.Center" Typo="Typo.h4">@_world?.SubHeader</MudText>
				<MudText Align="Align.Center" Typo="Typo.body1">@_world?.Description</MudText>
				<MudDivider Light="false" Class="my-1" DividerType="DividerType.Middle" />
			</MudStack>
		}

	</MudPaper>
</MudContainer>