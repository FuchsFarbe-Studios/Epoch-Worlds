@using Typo=MudBlazor.Typo
@using MudBlazor
@namespace EpochApp.Client.Pages.Dashboard.Builders
@if (GeneratedResult != null)
{
	<section id="generated-content" class="mt-4">
		<MudPaper Outlined="true" Class="pa-2 mud-theme-dark" Width="100%" MinHeight="400px">

			<MudPaper Outlined="true" Class="pa-2" Width="100%" MinHeight="1000px">

				<!-- Language Basics -->
				<MudText Typo="Typo.h5" Color="Color.Primary" Align="Align.Center">@GeneratedResult.LanguageName</MudText>
				<MudText Typo="Typo.h6" Align="Align.Center">@($"/{GeneratedResult.Pronunciation}/")</MudText>
				<MudDivider DividerType="DividerType.FullWidth" Light="false" />

				<!-- Word Dictionary -->
				<MudText Typo="Typo.h5" Align="Align.Center">Dictionary</MudText>
				<MudDivider DividerType="DividerType.FullWidth" Light="false" />

				<MudGrid Spacing="2" Style="min-height: 500px; height: 50vh;">
					<Virtualize TItem="GeneratedWord" Items="@GeneratedResult.Words" OverscanCount="15" Context="vCtx">
						<ItemContent>
							<MudItem xs="6" sm="4" md="3" lg="2">
								<MudPaper Outlined="true" Width="100%" Class="pa-1">
									<MudText Typo="Typo.body2">
										<MudText Typo="Typo.body1" Inline="true" Color="Color.Info">@vCtx.ConLangWordAlt</MudText> @vCtx.ConLangWord <MudText Typo="Typo.caption" Color="Color.Dark" Inline="true">@vCtx.PartOfSpeech</MudText>
									</MudText>
									<MudText Typo="Typo.caption" Color="Color.Info">@($"/{vCtx?.IPA}/")</MudText>
									<MudText Color="Color.Dark" Typo="Typo.body1">@vCtx.Translations</MudText>
								</MudPaper>
							</MudItem>
						</ItemContent>
					</Virtualize>
				</MudGrid>

			</MudPaper>
		</MudPaper>
	</section>
}

@code {
	[Parameter] public ConstructedLanguageResult GeneratedResult { get; set; }
}