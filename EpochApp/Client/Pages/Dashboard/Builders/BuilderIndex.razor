@page "/Builders"
@namespace EpochApp.Client.Pages.Dashboard.Builders
<PageTitle>@StaticUtils.Constants.AppName - Builders</PageTitle>
<FlatTypo Typo="Typo.Heading3">Builders</FlatTypo>

<FlatTypo Typo="Typo.Body1">Here are the main builders for your world. </FlatTypo>
<FlatBreak />

<FlatAccordion>
	<AccordionItem>
		<TitleContent>
			<FlatTypo Typo="Typo.Heading6">Constructed Language Generator</FlatTypo>
		</TitleContent>
		<Content>
			<FlatTypo Typo="Typo.Body1">Create a new constructed language for your world. Several generation options are available, such as Phonology, Grammar, and Vocabulary.</FlatTypo>
		</Content>
	</AccordionItem>
	<AccordionItem>
		<TitleContent>
			<FlatTypo Typo="Typo.Heading6">Character Creator</FlatTypo>
		</TitleContent>
		<Content>
			<FlatTypo Typo="Typo.Body1">Create a new character from scratch, or allow our creative generators to create one for you that utilizes your world's data to generate a character.</FlatTypo>
		</Content>
	</AccordionItem>
	<AccordionItem>
		<TitleContent>
			<FlatTypo Typo="Typo.Heading6">State Manager</FlatTypo>
		</TitleContent>
		<Content>
			<FlatTypo Typo="Typo.Body1">Create, manage, or generate world states, countries, or territories.</FlatTypo>
		</Content>
	</AccordionItem>
</FlatAccordion>

