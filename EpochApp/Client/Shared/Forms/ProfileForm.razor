<EditForm Model="@Profile" OnValidSubmit="@(async e => await UpdateProfileAsync(e))">
	<EpochValidator @ref="@_validator" />

	<FlatTextInput Label="First Name" @bind-Value="@Profile.FirstName" MaxLength="255" Id="@nameof(Profile.FirstName)" InputType="InputType.Text" />
	<FlatTextInput Label="Last Name" @bind-Value="@Profile.LastName" MaxLength="255" InputType="InputType.Text" />
	<FlatTextArea Label="Bio" @bind-Value="@Profile.Bio" Lines="5" Placeholder="A small bio about yourself..." InputType="InputType.Text" />
	<FlatTextInput Label="Website" @bind-Value="@Profile.WebAddress" Placeholder="https://awebsite.com" InputType="InputType.Text" />
	<FlatTextInput Label="Signature" @bind-Value="@Profile.Signature" Placeholder="FuchsFarbe" InputType="InputType.Text" />

	<FlatButton Disabled="@_isLoading" ButtonType="ButtonType.Submit" Color="FlatColor.Accent">
		Submit Changes
	</FlatButton>
</EditForm>